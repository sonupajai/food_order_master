
<%= form_for([@hotel, @menu], remote: true, html: { style: 'display:inline;' }) do |f| %>
  <div class="form-group">
    <%= f.label :menu_Title, class:"control-label col-sm-1", style:"padding-right: 13px;" %>
    <div class="col-xs-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <% if action_name == 'edit' then %>
    <div class="col-xs-2">        
        <img width="100%" height="34" src="<%= @menu.image.url %>" alt="Logo Image", class: "form-control" >      
    </div>
    <% end %>
     <div class="col-xs-3">
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="col-xs-3">
      <div class="actions">
      <% if action_name == 'edit' then %>
          <%= f.submit "Update", class: 'btn btn-outline btn-success'%>
      <% else %>
          <%= f.submit "Save", class: 'btn btn-outline btn-success'%>
      <% end %>
      </div>
    </div>
  </div>  
<% end %>