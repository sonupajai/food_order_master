
<%= render "shared/ajax_call_area" %>
<%= form_for ([@hotel, @delivery_area]) do |f| %>
  <div class="form-horizontal">
    <% if @delivery_area.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@delivery_area.errors.count, "error") %> prohibited this delivery_area from being saved:
        </h2>
        <ul>
        <% @delivery_area.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
     <div class="col-xs-2"></div>
      <%= f.label :Delivery_City, class:"control-label col-xs-2" %>
       <div class="col-xs-5">
        <select class="multipleSelect form-control" name="city_id" id='city_id' >
          <option value="">--Select Your City--</option>
          <% @city.each do |c| %>
          <option value="<%=c.id %>"><%= c.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="form-group">
     <div class="col-xs-2"></div>
      <%= f.label :Delivery_Location, class:"control-label col-xs-2" %>
        <div class="col-xs-5">
          <select id='area_id' name='area_id[]'class=" form-control multipleSelect " multiple ></select>
        </div>
     </div>
    <div class="form-group">
     <div class="col-xs-2"></div>
      <%= f.label :Estimated_delivery_time, class:"control-label col-xs-2" %>
       <div class="col-xs-5">
      <%= f.text_field :delivery_time, class: "form-control" %>
     </div>
    </div>
    <div class="form-group">
      <div class="col-xs-2"></div>
      <label for="pwd" class="control-label col-xs-2">Delivery Charger(in Rs):</label>
      <div class="col-xs-5">
        <%= f.text_field :delivery_charges, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-2"></div>
      <label for="pwd" class="control-label col-xs-2">Min order amount:</label>
      <div class="col-xs-5">
        <%= f.text_field :min_order_amount, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <center>
        <div class="col-sm-offset-2 col-sm-9">
          <div class="actions">
            <%= f.submit "Save", class: 'btn btn-outline btn-success'%>
            <%= link_to 'Back', :back, class: 'btn btn-outline btn-success' %>
          </div>
        </div>
      </center>
    </div>
  </div>
<% end %>
