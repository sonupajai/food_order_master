  </div>
  <div class="field">
    <%= f.label :Delivery_charges %><br>
    <%= f.text_field :delivery_charges %>
  </div>
  <div class="field">
    <%= f.label :min_order_amount %><br>
    <%= f.text_field :min_order_amount %>
  </div>
  <div class="actions">
    <%= f.submit "Save"%>
  </div>
<% end %>