<ol class = "breadcrumb">
   <li><a href ="<%=root_path %>">Home</a></li>
   <li><a href = "">Restuarants in  <%= @area.city.name%>   </a></li>
   <li><%= @area.name%></li>
</ol>
<div class="min_div_height">
<h2>Order from <%= @hotels.count.to_i%> restaurants in <%= @area.name%>, <%= @area.city.name%>.<a href="<%=root_path %>" class="btn btn-primary btn-sm btn-alt b">Change location</a></h2>
<br/>
<% @hotels.each do |hotel| %>
<div class="row">
  <div class="col-sm-2"></div>   
  <div class="col-sm-10 border_div">    
      <div class="col-sm-2 ">      
            <img width="100" height="100" src="<%=hotel.image.url %>" alt="Logo Image">     
      </div>   
      <div class="col-sm-10" >
         <div class="col-sm-8" >
            <%= hotel.name%>  
            Speciality:<%= hotel.speciality %> 
            <div class="row">
              <div class="col-sm-4">
                 <i class="fa fa-star"></i>
                 <i class="fa fa-star"></i>
                 <i class="fa fa-star"></i>
                 <i class="fa fa-star"></i>
                 <i class="fa fa-star"></i>
                 <span> 204 Ratings</span> 
              </div>
            </div>         
          <div class="row">
           <div class="col-sm-3">
              <span class="trans_span">Delivery in:</span> 
           </div>
            <div class="col-sm-3">
              <span class="trans_span"> Delivery fee:</span>
           </div>
            <div class="col-sm-3">
              <span class="trans_span"> Min order:  </span>
           </div>
          </div>
          <div class="row">
             <div class="col-sm-3">
                 <%= hotel.get_delivery_area_for_hotel(@area_id).try(:delivery_time)  %>
             </div>
              <div class="col-sm-3">
                <%= hotel.get_delivery_area_for_hotel(@area_id).try(:delivery_charges) %>            
                </div>
              <div class="col-sm-3">
                <%= hotel.get_delivery_area_for_hotel(@area_id).try(:min_order_amount) %>
             </div>
          </div>
          </div>
          <div class="col-sm-4" >
              <a href="" class="btn btn-success btn-lg">Go to menu</a>
          </div>               
      </div>
       <hr>  

  </div> 
         
</div>

 <br>
  <% end %></div>
