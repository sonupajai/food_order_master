<br/>
<% @hotels.each do |hotel| %>
<div class="row">
  <div class="col-sm-2"></div>   
  <div class="col-sm-8">    
      <div class="col-sm-2"> 
     
            <img width="100" height="100" src="<%=hotel.image.url %>" alt="Logo Image"> 
     
      </div>   
      <div class="col-sm-10">
        <%= hotel.name%>  
         Speciality:<%= hotel.speciality %> 
         <div class="row">
          <div class="col-sm-2">
           <i class="fa fa-star"></i>
           <i class="fa fa-star"></i>
           <i class="fa fa-star"></i>
           <i class="fa fa-star"></i>
           <i class="fa fa-star"></i>
           </div>
          </div>
          <div class="row">
           <div class="col-sm-2">
              <span style=" opacity: 0.5;">Delivery in:</span> 
           </div>
            <div class="col-sm-2">
              <span style=" opacity: 0.5;"> Delivery fee:</span>
           </div>
            <div class="col-sm-2">
              <span style=" opacity: 0.5;"> Min order:  </span>
           </div>
          </div>
        <div class="row">
           <div class="col-sm-2">
               <%= hotel.get_delivery_area_time(@area_id) %>
           </div>
            <div class="col-sm-2">
              <%= DeliveryArea.where({ hotel_id: hotel.id, area_id: @area_id }).first.try(:delivery_charges) %>
           </div>
            <div class="col-sm-2">
              <%= DeliveryArea.where({ hotel_id: hotel.id, area_id: @area_id }).first.try(:min_order_amount) %>
           </div>
        </div>
      
               
      </div>
  </div> 
   <div class="col-sm-2"></div>          
</div>
 <br>
  <% end %>
