<div class="modal-dialog">    
  <div class="modal-content">         
   <form role="form" method="post" action="<%=hotel_rating_path(@hotel)%>" data-remote="true">
    <div class="modal-header" style="padding:35px 50px;">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4><span class="fa fa-star" style="color: gold;"></span> Rate Us</h4>
    </div>
    <div class="modal-body" style="padding:40px 50px;">
        <div class="form-group">
          <h1>
          <% for i in 1..5  %>
          <%= check_box_tag("ratings[]",value="1", checked = false,id: "star#{i}",:style => 'visibility: hidden') %>
          <label class="fa fa-star rating" for="star<%=i%>"> </label>

          <%end %>   
           </h1>
        </div>
        <div class="form-group">
          <label for="comments"> Comments</label>
          <textarea class="form-control" name="comments" id="comments" placeholder="Your Comments" rows="5" column="5"></textarea>
        </div>                    
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-danger btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No Thanks</button>
       <button type="submit" class="btn btn-success" id="btn_save">Save</button>
    </div>
    </form>
  </div>      
</div>
