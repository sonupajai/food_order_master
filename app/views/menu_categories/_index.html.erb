<% @menu_categories.each do |menu| %>
      <tr>
      	<td><img width="100" height="50" src="<%= menu.image.url %>" alt="Logo Image" class="img-thumbnail">
        </td>
        <td><%= menu.name %></td>
        <td><%= link_to "<i class='glyphicon glyphicon-pencil'></i> Edit".html_safe, edit_menu_category_path(menu), remote: true %></td>
        <td><%= link_to "<i class='glyphicon glyphicon-remove'></i> Delete".html_safe, menu_category_path(menu), method: :delete, :class =>"delete_#{menu.id}", data: { confirm: 'Are you sure?' } , :title => "Remove Menu", :remote => :true %> </td>
      </tr>
<% end %>