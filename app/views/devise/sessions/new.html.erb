<ol class = "breadcrumb">
   <li><a href ="<%=root_path %>">Home</a></li>
   <li class="active"><b>Sign in</b></li>
</ol>
<div class="container">
  <h2 align="center">Sign in</h2></br>
  <%= form_for(resource, as: resource_name, :html => {class: "form-horizontal", role: "form"}, url: session_path(resource_name)) do |f| %>
  
  <div class="form-group">
   <div class="col-sm-2"></div>
    <div class="control-label col-sm-2">
       <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
    </div>
    <div class="col-sm-5">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your Email", autofocus: true %>
    </div>
  </div>

  <div class="form-group" align="center">
    <div class="col-sm-2"></div>
    <div class="control-label col-sm-2">
      <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
    </div>
    <div class="col-sm-5">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-2"></div>
      <div class="control-label col-sm-2">
         <div class="checkbox">
            <label><%= f.check_box :remember_me %>Remember</label>
          </div>
      </div>  
      <div class="col-sm-4">
      <center><%= f.submit "Sign in", class: "btn btn-primary btn-lg" %></br></br>
      <%= render "devise/shared/links" %>
      </center>
      </div>     
    </div>
  <% end %>  
<% end %>
</div>
