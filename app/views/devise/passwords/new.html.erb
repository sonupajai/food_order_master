<ol class = "breadcrumb">
   <li><a href ="<%=root_path %>">Home</a></li>
   <li class="active"><b>Forgot Password</b></li>
</ol>
<div class="container">
<h2 align="center">Forgot your password?</h2></br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal", role: "form", method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
  	<div class="control-label col-sm-2">
  	    <%= f.label :email %>
  	</div>
    <div class="col-sm-8">
  		<%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-8">
    <center>
  		<%= f.submit "Reset password", class: "btn btn-primary btn-lg" %></br>
      <%= render "devise/shared/links" %>
    </center>
  	</div>
  </div>
<% end %>
</div>
