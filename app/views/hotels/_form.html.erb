<div class="container">
<%= form_for(@hotel, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @hotel.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>
      <ul>
      <% @hotel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="form-group">
    <%= f.label :Hotel_image , class:"control-label col-xs-2"%>
    <% if action_name == 'edit' then %>
    
    <div class="col-xs-5">
    <%= f.file_field :image , class: "form-control" %>
    </div>
    <div class="col-xs-3">
    <img width="200" height="50" src="<%=@hotel.image.url %>" alt="Logo Image" , class: "form-control">  
    </div>
    <% else %>    
    <div class="col-xs-10">
   <%= f.file_field :image %>
   </div>
     <% end %>
  </div>
   <div class="form-group">
    <%= f.label :Hotel_Name, class:"control-label col-xs-2" %>
     <div class="col-xs-10">
    <%= f.text_field :name , class: "form-control"%>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :Hotel_Description,class:"control-label col-xs-2" %>
    <div class="col-xs-10">
    <%= f.text_field :type , class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :Speciality,class:"control-label col-xs-2" %>
    <div class="col-xs-10">
    <%= f.text_field :speciality , class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :City,class:"control-label col-xs-2" %>
    <div class="col-xs-10">
    <%= collection_select(:hotel, :city_id, @cities, :id, :name, {:prompt => true} , class: "form-control")
    %>
    </div>
  </div>  
   <div class="form-group">
    <%= f.label :address,class:"control-label col-xs-2" %>
    <div class="col-xs-10">
    <%= f.text_area :address , class: "form-control" %>
    </div>
  </div>
  <div class="form-group">        
    <center>
    <div class="col-sm-offset-2 col-sm-10">
      <div class="actions">
        <%= f.submit "Save", class: 'btn btn-outline btn-success'%>
        <%= link_to 'Back', hotels_path, class: 'btn btn-outline btn-success' %>
      </div>
    </div>
    </center>
  </div>
<% end %>
</div>