<%= form_for @city, remote: true, html: { style: "display:inline;" } do |f| %>
  	<div class="form-group">
        <%= f.label :City_Name, class:"control-label col-sm-1", style:"padding-right: 13px;" %>
        <div class="col-xs-5">
		   <%= f.text_field :name, class:"form-control" %>
		</div>
		<div class="form-group">
      <div class="col-xs-2"></div>
       	<%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="col-xs-5"></div>
    </div>
		<div class="col-xs-5">
		    <div class="actions">
			    <% if action_name == 'edit' then %>
					<%= f.submit "Update", class: 'btn btn-outline btn-success' %>
				<% else %>
					<%= f.submit "Save", class: 'btn btn-outline btn-success' %>
				<% end %>
			</div>
		</div>
	</div><br/><br/>
<% end %>
