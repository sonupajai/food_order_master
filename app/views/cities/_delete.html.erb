<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete City</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @city.name %> City</b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This City", city_path(@city), method: :delete, remote: true, class: "btn btn-danger", data: { dismiss: "modal" } %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>