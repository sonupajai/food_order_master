<%= form_for(@area) do |f| %>
  <%= render'shared/error_messages', ref_obj: @city %>
  <%= collection_select(:area, :city_id, @cities, :id, :name, {:prompt => true}) %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :pincode %><br>
      <%= f.text_field :pincode %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
