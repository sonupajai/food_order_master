<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Add Location</h3>
    </div>
    <div class="modal-body">
      <ul id="ul_errors"></ul>
       <%= form_for([@city, @area], remote: true, html: { style: 'display:inline;' }) do |f| %> 
        <div class="form-horizontal">          
          <div class="form-group">
            <div class="col-xs-2"></div>
            <%= f.label :Location_Name, class:"control-label col-xs-2" %>
            <div class="col-xs-5">
              <%= f.text_field :name , class: "form-control"%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-2"></div>
            <%= f.label :Pincode, class:"control-label col-xs-2" %>
            <div class="col-xs-5">
              <%= f.text_field :pincode, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
           <div class="form-group">
              <div class="actions">   
              <% if action_name == 'edit' then %> 
                <%= f.submit "Update", id:"btn_edit", class: 'btn btn-outline btn-success'%>
              <% else %>
               <%= f.submit "Save", id:"btn_save" ,class: 'btn btn-outline btn-success'%>
              <% end %>
                <%= link_to "Close", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
              </div>
          </div>
        </div> 
      <% end %>
    </div>
  </div>
</div>