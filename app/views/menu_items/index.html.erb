<p id="notice"><%= notice %></p>

<h1>Listing Menu Items</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Prize</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.Item_name %></td>
        <td><%= menu_item.Prize %></td>
        <td><%= menu_item.Description %></td>
        <td><%= menu_item.quantity %></td>
        <td><%= menu_item.menu.try(:Menu_name) %></td>
        <td><%= link_to 'Show', menu_item %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

