<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 align="center">Add Menu Item</h3>
    </div>
    <div class="modal-body">
      <ul id="ul_errors"></ul>
      <%= form_for( [@hotel, @menu, @menu_item], remote: true ) do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-xs-2"></div>
            <%= f.label :Name, class:"control-label col-xs-2" %>
          <div class="col-xs-5">
              <%= f.text_field :name , class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-2"></div>
          <%= f.label :Price, class:"control-label col-xs-2" %>
          <div class="col-xs-5 inputGroupContainer">
            <div class="input-group">
              <%= f.text_field :price, class: "form-control" %>
              <span class="input-group-addon"><i class="fa fa-inr"></i></span>
            </div>
          </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2"></div>
            <%= f.label :Quantity, class:"control-label col-xs-2" %>
            <div class="col-xs-5">
              <%= f.text_field :quantity, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2"></div>
            <%= f.label :Description, class:"control-label col-xs-2" %>
            <div class="col-xs-5">
              <%= f.text_area :description, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
          <div class="col-xs-2"></div>
          <%= f.label :Discounted_Price, class:"control-label col-xs-2" %>
          <div class="col-xs-5 inputGroupContainer">
            <div class="input-group">
              <%= f.text_field :discount, class: "form-control" %>
              <span class="input-group-addon"><i class="fa fa-inr"></i></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-2"></div>
          <%= f.hidden_field :menu_id, :value => @menu.id %>
          <div class="col-xs-5"></div>
        </div>
        <div class="form-group">
          <div class="col-xs-2"></div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
          <div class="col-xs-5"></div>
        </div>
        <div class="form-group">
        <div class="col-xs-5"></div>
        <div class="col-xs-4">
          <div class="actions">
            <% if action_name == 'edit' then %>
              <%= f.submit "Update", id:"btn_edit", class: 'btn btn-outline btn-success'%>
            <% else %>
              <%= f.submit "Save", id:"btn_save" ,class: 'btn btn-outline btn-success'%>
            <% end %>
              <%= link_to "Close", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
          </div>
        </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>